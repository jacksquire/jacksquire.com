---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CursorGlow from '../components/CursorGlow.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  preloadImage?: string;
}

const {
  title,
  description = "Jack Squire - Founder & Entrepreneur. Building products, sharing ideas.",
  image = "/og-image.png",
  preloadImage
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const websiteJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Jack Squire",
  "url": Astro.site?.href || "https://jacksquire.com",
  "description": description,
};

// Analytics & verification
const ga4Id = import.meta.env.PUBLIC_GA4_MEASUREMENT_ID;
const gscVerification = import.meta.env.PUBLIC_GSC_VERIFICATION;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | Jack Squire</title>
    <meta name="title" content={`${title} | Jack Squire`} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Jack Squire`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Jack Squire`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Theme color -->
    <meta name="theme-color" content="#0a0a0a" />

    <!-- Google Search Console Verification -->
    {gscVerification && (
      <meta name="google-site-verification" content={gscVerification} />
    )}

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KBB75EVFXS" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-KBB75EVFXS');
    </script>

    <script type="application/ld+json">
      {JSON.stringify(websiteJsonLd)}
    </script>

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    {ga4Id && <link rel="preconnect" href="https://www.googletagmanager.com" />}
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      />
    </noscript>
    {preloadImage && (
      <link rel="preload" as="image" href={preloadImage} />
    )}
  </head>
  <body class="min-h-screen flex flex-col">
    <a href="#main-content" class="skip-link">Skip to content</a>
    <CursorGlow />
    <Header />
    <main id="main-content" class="flex-grow" tabindex="-1">
      <slot />
    </main>
    <Footer />

    <script is:inline>
      // Check for saved theme preference or default to dark
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.classList.toggle('light', theme === 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </body>
</html>
