---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data, slug }) => {
    // Filter out drafts and template files
    return !data.draft && !slug.startsWith('_');
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Calculate reading time from body (rough estimate)
const readingTime = `${Math.ceil(post.body.length / 1000)} min read`;
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  date={post.data.date.toISOString().split('T')[0]}
  category={post.data.category}
  readingTime={readingTime}
  image={post.data.image}
>
  <Content />
</BlogLayout>
