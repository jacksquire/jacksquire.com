---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import BlogCard from '../components/BlogCard.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Featured projects
const featuredProjects = [
  {
    title: "Outrider Digital",
    description: "Boutique SEO agency specializing in organic search strategy. White-label SEO for agencies and direct client work with proven results.",
    techStack: ["SEO", "Content Strategy", "Analytics"],
    status: "Active" as const,
    year: 2020,
    liveUrl: "https://outriderdigital.com",
  },
  {
    title: "Stacks",
    description: "Building tools for people who think differently. Early-stage project helping misfits build systems that actually work for their brains.",
    techStack: ["Product", "ADHD", "Productivity"],
    status: "Active" as const,
    year: 2024,
    liveUrl: "https://getstacks.xyz",
  },
  {
    title: "Free ADHD Test",
    description: "Free 5-minute self-assessment to understand ADHD symptoms and decide next steps.",
    techStack: ["Mental Health", "Assessment", "DSM-5"],
    status: "Active" as const,
    year: 2024,
    liveUrl: "https://freeadhdtest.org",
  },
  {
    title: "Super Septic",
    description: "Niche SEO agency for septic pumping and installation companies.",
    techStack: ["SEO", "Google Ads", "Local Search"],
    status: "Active" as const,
    year: 2025,
    liveUrl: "https://septicmarketing.us",
  },
];
---

<BaseLayout title="Home" preloadImage="/images/optimized/jack-hero-320.webp">
  <!-- Hero Section -->
  <section class="section pt-32 md:pt-40 pb-14 md:pb-20">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="order-2 md:order-1">
          <div class="animate-fade-in">
            <p class="text-primary font-medium mb-4">Hey, I'm Jack</p>
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold leading-tight mb-6 animate-slide-up">
            Building
            <span class="gradient-text">growth engines</span>
            across search, product, and content
          </h1>

          <p class="text-sm uppercase tracking-[0.3em] text-text-muted mb-4 animate-slide-up animation-delay-100">
            Founder • SEO strategist • Product builder
          </p>

          <p class="text-xl text-text-muted leading-relaxed mb-8 animate-slide-up animation-delay-200">
            Founder, SEO strategist, product builder. I run a boutique agency and build tools for people whose brains don't fit factory settings.
            High standards, clean execution, and results you can measure.
          </p>

          <div class="flex flex-wrap gap-4 animate-slide-up animation-delay-300">
            <Button href="#newsletter">
              Join the Newsletter
            </Button>
            <Button href="/projects" variant="secondary">
              See What I'm Building
            </Button>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="order-1 md:order-2 flex justify-center md:justify-end animate-fade-in">
          <div class="relative">
            <!-- Gradient border glow -->
            <div class="absolute -inset-2 bg-gradient-to-r from-primary via-purple-500 to-secondary rounded-2xl blur-xl opacity-40"></div>
            <!-- Image container - taller aspect ratio for portrait -->
            <div class="relative w-64 md:w-80 rounded-2xl overflow-hidden border-2 border-white/10">
              <picture>
                <source
                  srcset="/images/optimized/jack-hero-256.avif 256w, /images/optimized/jack-hero-320.avif 320w, /images/optimized/jack-hero-480.avif 480w"
                  sizes="(max-width: 768px) 256px, 320px"
                  type="image/avif"
                />
                <source
                  srcset="/images/optimized/jack-hero-256.webp 256w, /images/optimized/jack-hero-320.webp 320w, /images/optimized/jack-hero-480.webp 480w"
                  sizes="(max-width: 768px) 256px, 320px"
                  type="image/webp"
                />
                <img
                  src="/images/jack-hero.jpg"
                  alt="Jack Squire"
                  width="815"
                  height="1080"
                  decoding="async"
                  fetchpriority="high"
                  class="w-full h-auto"
                />
              </picture>
            </div>
          </div>
        </div>
      </div>

      <!-- Decorative element -->
      <div class="absolute top-1/2 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -z-10 translate-x-1/2 -translate-y-1/2"></div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section pt-12 md:pt-20 content-visibility-auto" id="about">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
            The short version
          </h2>
          <div class="space-y-4 text-text-muted">
            <p>
              I spent 7 years as an EDM producer learning how to build an audience, perform under pressure, and keep showing up when the lights are on.
              That same intensity now fuels my work across growth, product, and content.
            </p>
            <p>
              Today I run a boutique agency, build products for ADHD brains, and put down roots in Mexico City after 45+ countries.
              I care about craft, leverage, and shipping work that actually moves the needle.
            </p>
            <p>
              The throughline is simple: build with conviction, keep it human, and surround yourself with people who make you sharper.
            </p>
          </div>
          <div class="mt-8">
            <Button href="/about" variant="secondary">
              Read the full story
            </Button>
          </div>
        </div>

        <!-- Stats / Highlights -->
        <div class="grid grid-cols-2 gap-4">
          <div class="card text-center">
            <div class="text-4xl font-heading font-bold gradient-text mb-2">45+</div>
            <div class="text-text-muted text-sm">Countries Visited</div>
          </div>
          <div class="card text-center">
            <div class="text-4xl font-heading font-bold gradient-text mb-2">Top 1%</div>
            <div class="text-text-muted text-sm">Upwork SEO Expert</div>
          </div>
          <div class="card text-center">
            <div class="text-4xl font-heading font-bold gradient-text mb-2">100+</div>
            <div class="text-text-muted text-sm">Lbs Lost & Kept Off</div>
          </div>
          <div class="card text-center">
            <div class="text-4xl font-heading font-bold gradient-text mb-2">50-100</div>
            <div class="text-text-muted text-sm">Books Per Year</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="section bg-surface/50 content-visibility-auto">
    <div class="container">
      <div class="flex items-end justify-between mb-12">
        <div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-2">
            What I'm Building
          </h2>
          <p class="text-text-muted">
            Businesses and tools for people who think differently
          </p>
        </div>
        <Button href="/projects" variant="secondary" size="sm">
          View all
        </Button>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {featuredProjects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Blog Posts -->
  <!-- Blog section commented out until real content is added
  <section class="section">
    <div class="container">
      <div class="flex items-end justify-between mb-12">
        <div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-2">
            Latest from the Blog
          </h2>
          <p class="text-text-muted">
            Real lessons from building, failing, and figuring it out
          </p>
        </div>
        <Button href="/blog" variant="secondary" size="sm">
          Read all posts
        </Button>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {featuredPosts.map((post) => (
          <BlogCard {...post} />
        ))}
      </div>
    </div>
  </section>
  -->

  <!-- Newsletter CTA Section -->
  <section class="section" id="newsletter">
    <div class="container">
      <div class="gradient-border p-8 md:p-12 text-center">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          For misfits who build their own rules
        </h2>
        <p class="text-text-muted max-w-xl mx-auto mb-8">
          I share what I'm learning about building businesses, staying sane with ADHD, and creating a life that actually fits who you are.
          No fluff, no guru bullshit. Just sharp, practical notes from the field.
        </p>
        <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 bg-surface border border-border rounded-lg focus:outline-none focus:border-primary transition-colors"
            required
          />
          <Button type="submit">
            Join the Tribe
          </Button>
        </form>
        <p class="text-text-muted text-sm mt-4">
          No spam. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
