---
interface Props {
    tier: "S+" | "S" | "A" | "B" | "C" | "D";
    size?: "sm" | "md" | "lg";
}

const { tier, size = "md" } = Astro.props;

const colors = {
    "S+": "bg-gradient-to-r from-yellow-300 via-yellow-100 to-yellow-500 text-yellow-900 shadow-[0_0_15px_rgba(234,179,8,0.6)] border-yellow-400 animate-shimmer bg-[length:200%_100%]",
    S: "bg-yellow-500/20 text-yellow-300 border-yellow-500/50",
    A: "bg-purple-500/20 text-purple-300 border-purple-500/50",
    B: "bg-blue-500/20 text-blue-300 border-blue-500/50",
    C: "bg-gray-500/20 text-gray-300 border-gray-500/50",
    D: "bg-red-900/20 text-red-400 border-red-900/50",
};

const sizes = {
    sm: "text-xs px-1.5 py-0.5 border",
    md: "text-sm px-2 py-0.5 border",
    lg: "text-base px-3 py-1 border-2",
};

const styles = `${colors[tier]} ${sizes[size]} rounded font-bold font-mono inline-flex items-center justify-center backdrop-blur-sm`;
---

<span class={styles}>
    {tier}
</span>

<style>
    @keyframes shimmer {
        0% {
            background-position: 100% 0;
        }
        100% {
            background-position: -100% 0;
        }
    }
    .animate-shimmer {
        animation: shimmer 3s infinite linear;
    }
</style>
