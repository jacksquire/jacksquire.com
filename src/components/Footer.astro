---

<footer class="border-t border-border/50 py-12 mt-auto">
  <div class="container">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo / Name -->
      <div class="flex flex-col items-center md:items-start gap-2">
        <a href="/" class="font-heading font-bold text-xl hover:text-primary transition-colors">
          Jack Squire
        </a>
        <p class="text-text-muted text-sm">
          Building things for misfits
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
            class="p-2 rounded-lg text-text-muted hover:text-text hover:bg-surface transition-colors"
          >
            <svg
              class="w-5 h-5"
              viewBox="0 0 24 24"
              fill={link.name === 'Email' ? 'none' : 'currentColor'}
              stroke={link.name === 'Email' ? 'currentColor' : 'none'}
              set:html={link.icon}
            />
          </a>
        ))}
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="mt-8 pt-8 border-t border-border/50">
      <div class="max-w-md mx-auto text-center">
        <h3 class="font-heading font-bold mb-2">Join the newsletter</h3>
        <p class="text-text-muted text-sm mb-4">
          Real talk on building, ADHD brains, and creating your own path.
        </p>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-2 bg-surface border border-border rounded-lg text-sm focus:outline-none focus:border-primary transition-colors"
            required
          />
          <button type="submit" class="btn btn-primary text-sm px-4 py-2">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-border/50 text-center">
      <p class="text-text-muted text-sm">
        &copy; {currentYear} Jack Squire. All rights reserved.
      </p>
      <p class="text-text-muted text-xs mt-2">
        Thanks for stopping by.
      </p>
    </div>
  </div>
</footer>
